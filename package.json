{
  "name": "@qvlt/config-eslint",
  "version": "0.0.9",
  "description": "ESLint configuration for Qvlt projects",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./react.js": "./react.js",
    "./typescript.js": "./typescript.js",
    "./monorepo.js": "./monorepo.js",
    "./typechecked.js": "./typechecked.js"
  },
  "files": [
    "index.js",
    "react.js",
    "typescript.js",
    "monorepo.js",
    "typechecked.js"
  ],
  "keywords": [
    "eslint",
    "eslint-config",
    "qvlt"
  ],
  "author": "Qvlt",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qvlt/config-eslint.git"
  },
  "bugs": {
    "url": "https://github.com/qvlt/config-eslint/issues"
  },
  "homepage": "https://github.com/qvlt/config-eslint#readme",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "preversion": "bash -lc 'set -euxo pipefail; pnpm i --frozen-lockfile --ignore-workspace; pnpm -C example i --no-frozen-lockfile --ignore-workspace; pnpm -C example exec eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0'",
    "version": "bash -lc 'set -euo pipefail; V=$(node -p \"require(\\\"./package.json\\\").version\"); git add -A; git commit -m \"chore(release): v$V\" || true'",
    "postversion": "echo \"postversion: skip pushing (tag after merge)\"",
    "bump:patch": "pnpm version patch --no-git-tag-version",
    "bump:minor": "pnpm version minor --no-git-tag-version",
    "bump:major": "pnpm version major --no-git-tag-version",
    "bump:prerelease": "pnpm version prerelease --no-git-tag-version",
    "bump:alpha": "pnpm version prerelease --preid alpha --no-git-tag-version",
    "bump:beta": "pnpm version prerelease --preid beta --no-git-tag-version",
    "tag:current": "bash -lc 'set -euo pipefail; V=$(node -p \"require(\\\"./package.json\\\").version\"); git tag v$V -m \"Release $V\"; git push origin v$V'",
    "tag:current:signed": "bash -lc 'set -euo pipefail; V=$(node -p \"require(\\\"./package.json\\\").version\"); git tag -s v$V -m \"Release $V\"; git push origin v$V'",
    "checks:example": "pnpm -C example exec eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "test": "echo 'No tests configured'",
    "lint": "echo 'No linting configured'"
  },
  "dependencies": {
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "typescript-eslint": "^8.41.0"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
