{
  "name": "@qvlt/config-eslint",
  "version": "0.0.8",
  "description": "ESLint configuration for Qvlt projects",
  "type": "module",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./react.js": "./react.js",
    "./typescript.js": "./typescript.js",
    "./monorepo.js": "./monorepo.js",
    "./typechecked.js": "./typechecked.js"
  },
  "files": [
    "index.js",
    "react.js",
    "typescript.js",
    "monorepo.js",
    "typechecked.js"
  ],
  "keywords": [
    "eslint",
    "eslint-config",
    "qvlt"
  ],
  "author": "Qvlt",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qvlt/config-eslint.git"
  },
  "bugs": {
    "url": "https://github.com/qvlt/config-eslint/issues"
  },
  "homepage": "https://github.com/qvlt/config-eslint#readme",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "preversion": "bash -lc 'set -euxo pipefail; pnpm i --frozen-lockfile --ignore-workspace; pnpm -C example i --no-frozen-lockfile --ignore-workspace; pnpm -C example exec eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0'",
    "version": "git add -A && git commit --amend -m \"chore(release): v%s\" --no-edit || true",
    "postversion": "git push --follow-tags",
    "release:patch": "pnpm version patch -m \"chore(release): v%s\"",
    "release:minor": "pnpm version minor -m \"chore(release): v%s\"",
    "release:major": "pnpm version major -m \"chore(release): v%s\"",
    "release:prerelease": "pnpm version prerelease -m \"chore(release): v%s\"",
    "release:alpha": "pnpm version prerelease --preid alpha -m \"chore(release): v%s\"",
    "release:beta": "pnpm version prerelease --preid beta -m \"chore(release): v%s\"",
    "test": "echo 'No tests configured'",
    "lint": "echo 'No linting configured'"
  },
  "dependencies": {
    "@eslint/js": "^9.34.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "typescript-eslint": "^8.41.0"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
